@model Bonomini_Guido_TPF.Models.User

@{
    ViewBag.Title = "AfterLogin";
}

<h2>Log in successful</h2>

@if (Session["LogedUserName"] != null)
{
    <h3 style="text-align: center; font-family:Verdana; font-size:x-large">
          Welcome @Session["LogedUserName"].ToString()
          <br />
          <br />
    </h3> 

}

@if (Session["LogedUserRoleID"].ToString() == "1")
{    
  using (Html.BeginForm("UserHome", "Home", FormMethod.Post))
  { 
    <center>
    <input type="submit" value="Return to User Home Page" style ="font-family:Verdana; font-size:large" />
    </center>
  }
}
else if (Session["LogedUserRoleID"].ToString() == "2")
{
    using (Html.BeginForm("EmployeeHome", "Home", FormMethod.Post))
  { 
    <center>
    <input type="submit" value="Return to Employee Home Page" style ="font-family:Verdana; font-size:large"/>
    </center>
  }
}
else if (Session["LogedUserRoleID"].ToString() == "3")
{
   using (Html.BeginForm("ManagerHome", "Home", FormMethod.Post))
  { 
    <center>
    <input type="submit" value="Return to Manager Home Page" style ="font-family:Verdana; font-size:large" />
    </center>
  }
}